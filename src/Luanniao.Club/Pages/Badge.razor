    <LNBadge Dot="true" Status="LNBadge.BadgeStatus.Processing" CStyle="width:10px;height:10px;background: ##2db7f5" Text="#2db7f5" />
    <LNBadge Dot="true" Status="LNBadge.BadgeStatus.Processing" CStyle="width:10px;height:10px;background: #87d068" Text="#87d068" />
    <LNBadge Dot="true" Status="LNBadge.BadgeStatus.Processing" CStyle="width:10px;height:10px;background: #108ee9" Text="#108ee9" />
    </Col>

    <Col Span="2">
    <LNBadge Count="2" Title="My title">

        <a onclick="LuanNiaoBlazor.BlockClickEvent()" class="head-example" />
    </LNBadge>
    </Col>
</Row>
@code{
    LNBadge _test = null;

    private void Add(LuanNiao.Blazor.Component.Antd.Button.LNButton _)
    {
        _test.AddNum();
        this.StateHasChanged();
    }
}
<style>
    .head-example {
        width: 42px;
        height: 42px;
        border-radius: 2px;
        background: #eee;
        display: inline-block;
        vertical-align: middle;
    }


    .site-badge-count-4 .ant-badge-count {
        background-color: #fff;
        color: #999;
        box-shadow: 0 0 0 1px #d9d9d9 inset;
