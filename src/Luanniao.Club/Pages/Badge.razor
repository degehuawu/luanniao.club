    <Col Span="2">
    <br />
    </Col>
    <Col Span="2">
    <LNBadge>

        <a onclick="LuanNiaoBlazor.BlockClickEvent()" class="head-example" />
    </LNBadge>
    </Col>

    <Col Span="2">
    <LNBadge Count="32">

        <a onclick="LuanNiaoBlazor.BlockClickEvent()" class="head-example" />
    </LNBadge>
    </Col>
    <Col Span="2">
    <LNBadge Count="322">

        <a onclick="LuanNiaoBlazor.BlockClickEvent()" class="head-example" />
    </LNBadge>
    </Col>

    <Col Span="2">
    <LNBadge Count="2">

        <a onclick="LuanNiaoBlazor.BlockClickEvent()" class="head-example" />
    </LNBadge>
    </Col>


