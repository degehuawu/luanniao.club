                    <p style="height:100px;line-height:100px">col-4</p>
                    </Col>
                    <Col Span="4" CStyle="background:rgba(0,146,255,.75);min-height:30px">
                    <p style="height:50px;line-height:50px">col-4</p>
                    </Col>
