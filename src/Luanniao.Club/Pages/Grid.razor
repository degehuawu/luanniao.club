            <ChildContent>
                <LNDivider Orientation="LNDivider.OrientationType.Left" CStyle="color:#333; fontWeight:normal">
                    @Tr((e) => e == "en" ? "Horizontal" : "水平")
                </LNDivider>
                <Row Gutter="new SameGutter() {  Gutter=16}">
                    <Col ClassName="gutter-row" Span="6">
                    <div style=" background: #0092ff; padding: 8px 0">col-6</div>
                    </Col>
                    <Col ClassName="gutter-row" Span="6">
                    <div style=" background: #0092ff; padding: 8px 0">col-6</div>
                    </Col>
                    <Col ClassName="gutter-row" Span="6">
                    <div style=" background: #0092ff; padding: 8px 0">col-6</div>
                    </Col>
                    <Col ClassName="gutter-row" Span="6">
                    <div style=" background: #0092ff; padding: 8px 0">col-6</div>
                    </Col>
                </Row>
                <LNDivider Orientation="LNDivider.OrientationType.Left" CStyle="color:#333; fontWeight:normal">

                    @Tr((e) => e == "en" ? "Responsive" : "响应式")
                </LNDivider>
                <Row Gutter="new ResponsiveGutter(){ XS=8, SM= 16, MD= 24,LG= 32 }">
                    <Col ClassName="gutter-row" Span="6">
                    <div style=" background: #0092ff; padding: 8px 0">col-6</div>
                    </Col>
                    <Col ClassName="gutter-row" Span="6">
                    <div style=" background: #0092ff; padding: 8px 0">col-6</div>
