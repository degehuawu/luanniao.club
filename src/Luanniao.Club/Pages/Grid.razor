                    <Col Span="6" CStyle="background:rgba(0,146,255,.75);min-height:30px">col-6</Col>
                    <Col Span="6" CStyle="background:#0092ff;min-height:30px">col-6</Col>
                </Row>

            </ChildContent>
        </LNCard>
    </LuanNiao.Blazor.Component.Antd.Grid.Col>

    <LuanNiao.Blazor.Component.Antd.Grid.Col Span="24">
        <LNCard>
            <Title>
