                    <Col ClassName="gutter-row" Span="6">
                    <div style=" background: #0092ff; padding: 8px 0">col-6</div>
                    </Col>
                    <Col ClassName="gutter-row" Span="6">
                    <div style=" background: #0092ff; padding: 8px 0">col-6</div>
                    </Col>
                </Row>
            </ChildContent>
        </LNCard>
    </LuanNiao.Blazor.Component.Antd.Grid.Col>

    <LuanNiao.Blazor.Component.Antd.Grid.Col Span="24">
        <LNCard>
            <Title>
                @Tr((current) => current == "en"
           ? "Offset"
           : "左右偏移")
            </Title>
            <ChildContent>
                <Row CStyle="margin-top:10px">
                    <Col Span="8" CStyle="background:rgba(0,146,255,.75);min-height:30px">col-8</Col>
                    <Col Span="8" Offset="8" CStyle="background:rgba(0,146,255,.75);min-height:30px">
                    col-8
                    </Col>
                </Row>
                <Row CStyle="margin-top:10px">
                    <Col Span="6" Offset="6" CStyle="background:rgba(0,146,255,.75);min-height:30px">
                    col-6 col-offset-6
                    </Col>
                    <Col Span="6" Offset="6" CStyle="background:rgba(0,146,255,.75);min-height:30px">
                    col-6 col-offset-6
                    </Col>
                </Row>
                <Row CStyle="margin-top:10px">
                    <Col Span="12" Offset="6" CStyle="background:rgba(0,146,255,.75);min-height:30px">
                    col-12 col-offset-6
                    </Col>
                </Row>
            </ChildContent>
        </LNCard>
    </LuanNiao.Blazor.Component.Antd.Grid.Col>


    <LuanNiao.Blazor.Component.Antd.Grid.Col Span="24">
        <LNCard>
            <Title>
                @Tr((current) => current == "en"
           ? "Grid sort"
           : "栅格排序")
            </Title>
            <ChildContent>
                <Row>
                    <Col Span="18" Push="6" CStyle="background:rgba(0,146,255,.75);min-height:30px">
                    col-18 col-push-6
                    </Col>
                    <Col Span="6" Pull="18" CStyle="background:#0092ff;min-height:30px">
                    col-6 col-pull-18
                    </Col>
                </Row>
            </ChildContent>
        </LNCard>
    </LuanNiao.Blazor.Component.Antd.Grid.Col>


    <LuanNiao.Blazor.Component.Antd.Grid.Col Span="24">
        <LNCard>
            <Title>
                @Tr((current) => current == "en"
           ? "Typesetting"
           : "排版")
            </Title>
            <ChildContent>
                <LNDivider Orientation="LNDivider.OrientationType.Left" CStyle="color:#333;fontWeight:normal">
                    sub-element align left
                </LNDivider>
                <Row Justify="JustifyType.Start" CStyle="background: rgba(128, 128, 128, 0.08);">
                    <Col Span="4" CStyle="background:rgba(0,146,255,.75);min-height:30px">col-4</Col>
                    <Col Span="4" CStyle="background:rgba(0,146,255,.75);min-height:30px">col-4</Col>
                    <Col Span="4" CStyle="background:rgba(0,146,255,.75);min-height:30px">col-4</Col>
                    <Col Span="4" CStyle="background:rgba(0,146,255,.75);min-height:30px">col-4</Col>
                </Row>

                <LNDivider Orientation="LNDivider.OrientationType.Left" CStyle="color:#333;fontWeight:normal">
                    sub-element align center
                </LNDivider>
                <Row Justify="JustifyType.Center" CStyle="background: rgba(128, 128, 128, 0.08);">
                    <Col Span="4" CStyle="background:rgba(0,146,255,.75);min-height:30px">col-4</Col>
                    <Col Span="4" CStyle="background:rgba(0,146,255,.75);min-height:30px">col-4</Col>
                    <Col Span="4" CStyle="background:rgba(0,146,255,.75);min-height:30px">col-4</Col>
                    <Col Span="4" CStyle="background:rgba(0,146,255,.75);min-height:30px">col-4</Col>
                </Row>

                <LNDivider Orientation="LNDivider.OrientationType.Left" CStyle="color:#333;fontWeight:normal">
                    sub-element align right
                </LNDivider>
                <Row Justify="JustifyType.End" CStyle="background: rgba(128, 128, 128, 0.08);">
                    <Col Span="4" CStyle="background:rgba(0,146,255,.75);min-height:30px">col-4</Col>
                    <Col Span="4" CStyle="background:rgba(0,146,255,.75);min-height:30px">col-4</Col>
                    <Col Span="4" CStyle="background:rgba(0,146,255,.75);min-height:30px">col-4</Col>
                    <Col Span="4" CStyle="background:rgba(0,146,255,.75);min-height:30px">col-4</Col>
                </Row>

                <LNDivider Orientation="LNDivider.OrientationType.Left" CStyle="color:#333;fontWeight:normal">
                    sub-element monospaced arrangement
                </LNDivider>
                <Row Justify="JustifyType.SpaceBetween" CStyle="background: rgba(128, 128, 128, 0.08);">
                    <Col Span="4" CStyle="background:rgba(0,146,255,.75);min-height:30px">col-4</Col>
                    <Col Span="4" CStyle="background:rgba(0,146,255,.75);min-height:30px">col-4</Col>
                    <Col Span="4" CStyle="background:rgba(0,146,255,.75);min-height:30px">col-4</Col>
                    <Col Span="4" CStyle="background:rgba(0,146,255,.75);min-height:30px">col-4</Col>
                </Row>

                <LNDivider Orientation="LNDivider.OrientationType.Left" CStyle="color:#333;fontWeight:normal">
                    sub-element align full
                </LNDivider>
                <Row Justify="JustifyType.SpaceAround" CStyle="background: rgba(128, 128, 128, 0.08);">
                    <Col Span="4" CStyle="background:rgba(0,146,255,.75);min-height:30px">col-4</Col>
                    <Col Span="4" CStyle="background:rgba(0,146,255,.75);min-height:30px">col-4</Col>
                    <Col Span="4" CStyle="background:rgba(0,146,255,.75);min-height:30px">col-4</Col>
                    <Col Span="4" CStyle="background:rgba(0,146,255,.75);min-height:30px">col-4</Col>
                </Row>
            </ChildContent>
        </LNCard>
    </LuanNiao.Blazor.Component.Antd.Grid.Col>


    <LuanNiao.Blazor.Component.Antd.Grid.Col Span="24">
        <LNCard>
            <Title>
                @Tr((current) => current == "en"
           ? "Align "
           : "对齐")
            </Title>
            <ChildContent>
                <LNDivider Orientation="LNDivider.OrientationType.Left" CStyle="color:#333;fontWeight:normal">
                    Align Top
                </LNDivider>
                <Row Justify=" JustifyType.Center" Align=" AlignType.Top" CStyle="background:rgba(128, 128, 128, 0.08)">
