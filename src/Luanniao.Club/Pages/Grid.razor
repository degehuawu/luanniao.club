                    <Col ClassName="gutter-row" Span="6">
                    <div style=" background: #0092ff; padding: 8px 0">col-6</div>
                    </Col>
                    <Col ClassName="gutter-row" Span="6">
                    <div style=" background: #0092ff; padding: 8px 0">col-6</div>
                    </Col>
                </Row>
                <LNDivider Orientation="LNDivider.OrientationType.Left" CStyle="color:#333; fontWeight:normal">

                    @Tr((e) => e == "en" ? "Vertical" : "垂直与水平")
                </LNDivider>
                <Row Gutter="new MarginGutter {  Horizontal=16, Vertial=24}">
                    <Col ClassName="gutter-row" Span="6">
                    <div style=" background: #0092ff; padding: 8px 0">col-6</div>
                    </Col>
                    <Col ClassName="gutter-row" Span="6">
                    <div style=" background: #0092ff; padding: 8px 0">col-6</div>
                    </Col>
                    <Col ClassName="gutter-row" Span="6">
                    <div style=" background: #0092ff; padding: 8px 0">col-6</div>
                    </Col>
