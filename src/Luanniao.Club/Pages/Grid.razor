                    Align Middle
                </LNDivider>
                <Row Justify=" JustifyType.SpaceAround" Align=" AlignType.Middle" CStyle="background:rgba(128, 128, 128, 0.08)">
                    <Col Span="4" CStyle="background:#0092ff;min-height:30px">
                    <p style="height:100px;line-height:100px">col-4</p>
                    </Col>
                    <Col Span="4" CStyle="background:rgba(0,146,255,.75);min-height:30px">
                    <p style="height:50px;line-height:50px">col-4</p>
                    </Col>
                    <Col Span="4" CStyle="background:#0092ff;min-height:30px">
                    <p style="height:120px;line-height:120px">col-4</p>
